<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/border_text_input_layout.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- Border color in active state -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black_20" /> <!-- Border color in inactive state -->
        </shape>
    </item>
</selector>